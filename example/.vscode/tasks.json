{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "dev",
            "problemMatcher": [
                {
                    "owner": "custom",
                    "pattern": {
                        "regexp": "____________"
                    },
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "webpack:compile$",
                        "endsPattern": "webpack:done$"
                    }
                }
            ],
            "isBackground": true
        },
        {
            "type": "npm",
            "script": "start",
            "problemMatcher": [
                {
                    "owner": "custom",
                    "pattern": {
                        "regexp": "____________"
                    },
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "start-example",
                        "endsPattern": "^Example app listening"
                    }
                }
            ],
            "isBackground": true
        }
    ]
}
