{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Current TS File",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/ts-node/dist/_bin.js",
            "args": ["${relativeFile}"],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector"
        },
        {
            "name": "launch example (Node)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/ts-node/dist/_bin.js",
            "args": ["example/index.ts"],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector"
        },
        {
            "name": "launch example (Chrome)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceRoot}/example",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:///*": "${workspaceRoot}/*"
            },
            "preLaunchTask": "npm: start-example"
        },
        {
            "name": "launch example (Firefox)",
            "type": "firefox",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceRoot}/example",
            "skipFiles": [
                "node_modules/**"
            ],
            "pathMappings": [
                {
                    "url": "webpack:///", "path": "${workspaceRoot}/" 
                }
            ],
            "preLaunchTask": "npm: start-example"
        },
        {
            "name": "dev example (Chrome)",
            "type": "chrome",
            "request": "launch",
            "webRoot": "${workspaceRoot}/example",
            "url": "http://localhost:3000", 
            "userDataDir": "${workspaceRoot}/.vscode/chrome",
            "smartStep": true,
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "node_modules/**"
            ],
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:///*": "${workspaceFolder}/*"
            },
            "preLaunchTask": "npm: dev-example"
        },
        {
            "name": "dev example (Firefox)",
            "type": "firefox",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceRoot}/example",
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "node_modules/**"
            ],
            "pathMappings": [
                {
                    "url": "webpack:///", "path": "${workspaceRoot}/" 
                }
            ],
            "preLaunchTask": "npm: dev-example"
        },
    ]//,
    // "compounds": [
    //     {
    //         "name": "Example",
    //         "configurations": ["Example:Node", "Example:Chrome"]
    //     }
    // ]
}
